#include <iostream>
#include <string>

using namespace std;

int main() {
  // String creation
  string message1 = "Hello, ";
  string message2 = "World!";

  // Concatenation (using + operator)
  string fullMessage = message1 + message2;
  cout << "Full message: " << fullMessage << endl;

  // String size (using length() function)
  int messageLength = fullMessage.length();
  cout << "Message length: " << messageLength << endl;

  // Find a character (using find() function)
  int index = fullMessage.find("World");
  if (index != string::npos) { // npos is returned if not found
    cout << "\"World\" found at index: " << index << endl;
  } else {
    cout << "\"World\" not found in the string." << endl;
  }

  // Modify a character (using at() function)
  fullMessage.at(7) = '!'; // Modify the 8th character (index 7)
  cout << "Modified message: " << fullMessage << endl;

  // Extract a substring (using substr() function)
  string subString = fullMessage.substr(0, 7); // Extract first 7 characters
  cout << "Substring: " << subString << endl;

  return 0;
}
